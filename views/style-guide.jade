    article
      h1(id="buttons") Buttons
      div(class="default-buttons")
        h2 Default Buttons (salmon)
        button Default Button
        button(class="more") More Info
        button(class="like") Like
        section(class="expanding")
          div(class="jade-code")
            h3(class="expand-jade-code") Jade
            pre
              code(class="language-markup").
                button Default Button
                button(class="more") More Info
                button(class="like") Like
          div(class="sass-code")
            h3(class="expand-sass-code") Sass
            pre
              code(class="language-scss").
                @mixin button{
                   cursor: pointer;
                   position: relative;
                   border: 0;
                   width: 11em;
                   margin: 1em;
                   padding: 10px 20px;
                   border-radius: 2px;
                }
                button{
                  @include button;
                  background-color: $salmon;
                  color: white;
                }
                button:hover{
                  background-color: darken($salmon, 15%);
                }
                button.more{
                  width: 8.4em;
                }
                button.like{
                  width: 6em;
                }
