      h1(id="colors") Colors
      ul(class="swatches")
        li(class="magenta-swatch")
          code $magenta <br> #A61F5C
        li(class="salmon-swatch")
          code $salmon <br> #D6493B
        li(class="orange-swatch")
          code $orange <br> #DB943A
        li(class="yellow-swatch")
          code $yellow <br> #F2E94E
        li(class="green-swatch")
          code $green <br> #06BC5A
        li(class="teal-swatch")
          code $teal <br> #1A7172
        li(class="navy-swatch")
          code $navy <br> #1F2058
    article
      h1(id="typography") Typography
      h1 This is an h1 (Main Head)
      section(class="expanding")
        div(class="jade-code")
          h3(class="expand-jade-code") Jade
          pre
            code(class="language-markup").
              h1 This is an h1 (Main Head)
        div(class="sass-code")
          h3(class="expand-sass-code") Sass
          pre
            code(class="language-scss").
              $header-font: "Raleway";
              $header-font-weight: 700;
              $header-font-size: 3em;

              h1 {
                 font-family: $header-font;
                 font-weight: $header-font-weight;
                 font-size: $header-font-size;
              }

